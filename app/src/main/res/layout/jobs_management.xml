<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartTimeNow">

    <!--  Including header_bar.xml file here   -->
    <include
        layout="@layout/header_bar"
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add"
        android:layout_marginTop="16dp"
        android:background="#68a0b0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_bar" />

    <LinearLayout
        android:id="@+id/jobCard1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/box_background"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/addButton">

        <!-- Company Name TextView -->
        <TextView
            android:id="@+id/companyNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Arrow Button -->
        <ImageButton
            android:id="@+id/arrowButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Expand details"
            android:layout_marginLeft="230dp"
            android:padding="8dp"
            android:src="@drawable/arrow_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/jobCard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/box_background"
        android:layout_marginTop="100dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/addButton">

        <!-- Company Name TextView -->
        <TextView
            android:id="@+id/companyNameTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Arrow Button -->
        <ImageButton
            android:id="@+id/arrowButton2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Expand details"
            android:layout_marginLeft="230dp"
            android:padding="8dp"
            android:src="@drawable/arrow_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/jobCard3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/box_background"
        android:layout_marginTop="190dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/addButton">

        <!-- Company Name TextView -->
        <TextView
            android:id="@+id/companyNameTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Arrow Button -->
        <ImageButton
            android:id="@+id/arrowButton3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Expand details"
            android:layout_marginLeft="230dp"
            android:padding="8dp"
            android:src="@drawable/arrow_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/jobCard4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/box_background"
        android:layout_marginTop="270dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/addButton">

        <!-- Company Name TextView -->
        <TextView
            android:id="@+id/companyNameTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Arrow Button -->
        <ImageButton
            android:id="@+id/arrowButton4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Expand details"
            android:layout_marginLeft="230dp"
            android:padding="8dp"
            android:src="@drawable/arrow_icon" />

    </LinearLayout>

    <include
        android:id="@+id/footer_bar"
        layout="@layout/footer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
